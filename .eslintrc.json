{
  "root": true,
  "ignorePatterns": ["dist/"],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": true,
        "tsconfigRootDir": "__dirname"
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/strict-type-checked",
        "plugin:prettier/recommended"
      ]
    },
    {
      "files": [
        "*.test.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:jest/all",
        "plugin:prettier/recommended"
      ]
    }
  ]
}
