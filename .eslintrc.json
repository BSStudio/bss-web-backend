{
  "root": true,
  "ignorePatterns": [
    "dist/",
    "coverage/"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.ts"
      ],
      "parserOptions": {
        "project": true,
        "tsconfigRootDir": "__dirname"
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/strict-type-checked",
        "plugin:prettier/recommended"
      ]
    },
    {
      "files": [
        "tests/**/*.test.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:vitest/all",
        "plugin:@typescript-eslint/strict",
        "plugin:prettier/recommended"
      ]
    }
  ]
}
